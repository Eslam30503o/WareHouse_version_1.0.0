@model IEnumerable<WarehouseApp.Models.Item>

    @{
    ViewData["Title"] = "Items List";
    }

    @section Styles {
        <link href="~/css/index.css" rel="stylesheet" />
        <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
        <style>
            .filter-input {
                width: 100%;
                margin-bottom: 10px;
                padding: 5px;
            }

            .filter-row th {
                padding: 5px;
            }
        </style>
    }

    <h2>@ViewData["Title"]</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Add New Item</a>

    @if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        No items found. Click "Add New Item" to create one.
    </div>
}
else
{
    <table class="table table-striped table-hover" id="itemsTable">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Quantity</th>
                <th>Min Quantity</th>
                <th>Supplier</th>
                <th>Last Update</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="@(item.Quantity < item.MinQuantity ? "table-warning" : "")">
                <td>@item.Name</td>
                <td>@item.Code</td>
                <td>@item.Quantity</td>
                <td>@item.MinQuantity</td>
                <td>@item.Supplier</td>
                <td>@item.LastUpdate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ItemID" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.ItemID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete @item.Name?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr class="filter-row">
                <th><input type="text" class="filter-input" placeholder="Filter Name"></th>
                <th><input type="text" class="filter-input" placeholder="Filter Code"></th>
                <th><input type="text" class="filter-input" placeholder="Filter Quantity"></th>
                <th><input type="text" class="filter-input" placeholder="Filter Min Quantity"></th>
                <th><input type="text" class="filter-input" placeholder="Filter Supplier"></th>
                <th><input type="text" class="filter-input" placeholder="Filter Last Update"></th>
                <th></th>
            </tr>
        </tfoot>
    </table>
}

    @section Scripts {
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
        <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#itemsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "pageLength": 10,
                "columnDefs": [
                    { "orderable": false, "targets": 6 } // Disable sorting for Actions column
                ]
            });

            // Apply custom filtering for each column
            $('#itemsTable tfoot th').each(function (index) {
                var title = $(this).text();
                if (index < 6) { // Skip Actions column
                    $(this).html('<input type="text" class="filter-input" placeholder="Filter ' + title + '" />');
                }
            });

            // Apply the search
            table.columns().every(function () {
                var that = this;
                $('input', this.footer()).on('keyup change clear', function () {
                    if (that.search() !== this.value) {
                        that.search(this.value).draw();
                    }
                });
            });
        });
        </script>
    }
